        }

        .hidden {
    display: none;
}


.add-coupon-btn {
    display: block;
    margin-top: 450px;
    position: relative;
    left: -700px; /* Moves the button further left */
    padding: 10px 20px;
    background-color: #3498db;
    color: #fff;
    font-size: 12px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-align: center;
    transition: background-color 0.3s ease;
}



.add-coupon-btn:hover {
    background-color: #2980b9; /* Darker blue on hover */
}

.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
}

/* Pagination buttons */
.pagination-btn {
    margin: 0 5px;
    padding: 8px 16px;
    background-color: #f0f0f0;
    color: #333;
    text-decoration: none;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    transition: background-color 0.3s;
}

/* Pagination button on hover */
.pagination-btn:hover {
    background-color: #ddd;
}

/* Active page style */
.pagination-btn.active {
    background-color: #333;
    color: #fff;
    font-weight: bold;
    pointer-events: none;
}

/* Disabled button style (previous/next if at boundary) */
.pagination-btn.disabled {
    background-color: #f5f5f5;
    color: #ccc;
    pointer-events: none;
}


</style>
<body>

    <div class="main-container">
        <div class="sidebar">
            <h1>Admin Panel</h1>
            <ul>
                <li><a href="/admin/dashboard">Dashboard</a></li>
                <li><a href="/admin/customers">Customers</a></li>
                <li><a href="/admin/product">Products</a></li>
                <li><a href="/admin/categories">Categories</a></li>
                <li><a href="/admin/order">Orders</a></li>
                <li><a href="/admin/coupon" class="active">Coupons</a></li>
                <li><a href="/admin/sales-report">Sales</a></li>
                <li><a href="/admin/offer">Offers</a></li>
            </ul>
        </div>
    
        <div class="main-content">
            <h2>Coupon List</h2>
            <table>
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Discount</th>
                        <th>Min Amount</th>
                        <th>Max Amount</th>
                        <th>User Limit</th>
                        <th>Expiry Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (coupons.length > 0) { %>
                        <% coupons.forEach((coupon) => { %>
                        <tr>
                            <td><%= coupon.code %></td>
                            <td><%= coupon.discount %></td>
                            <td><%= coupon.minAmount %></td>
                            <td><%= coupon.maxAmount %></td>
                            <td><%= coupon.userLimit %></td>
                            <td><%= coupon.expiryDate.toISOString().split('T')[0] %></td>
                            <td>
                                <form action="/admin/coupon-delete" method="POST" style="display:inline;">
                                    <input type="hidden" name="couponId" value="<%= coupon._id %>">
                                    <button type="submit" class="btn-delete">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>

            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="/admin/coupon?page=<%= currentPage - 1 %>&limit=<%= limit %>" class="pagination-btn">Previous</a>
                <% } else { %>
                    <a class="pagination-btn disabled" style="pointer-events: none;">Previous</a>
                <% } %>
            
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="/admin/coupon?page=<%= i %>&limit=<%= limit %>" 
                       class="pagination-btn <%= currentPage === i ? 'active' : '' %>">
                       <%= i %>
                    </a>
                <% } %>
            
                <% if (currentPage < totalPages) { %>
                    <a href="/admin/coupon?page=<%= currentPage + 1 %>&limit=<%= limit %>" class="pagination-btn">Next</a>
                <% } else { %>
                    <a class="pagination-btn disabled" style="pointer-events: none;">Next</a>
                <% } %>
            </div>

        </div>
    </div>
    
    <a href='/admin/coupon-add'>
        <button class="add-coupon-btn">Add Coupon</button>
    </a>

    
   
</html>